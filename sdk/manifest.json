{
    "name": "SDK TOOL",
    "version": "0.1.8",
    "icons": {
        "128": "images/icon.png"
    },
    "permissions": [
        "<all_urls>",
        "tabs",
        "activeTab",
        "clipboardRead",
        "clipboardWrite"
    ],
    "background": {
        "scripts": [
            "lib/jquery.js",
            "js/bg.js"
        ],
        "persistent": false
    },
    "options_page": "options.html",
    "content_scripts": [{
        "matches": [
            "http://*.baidu.com/*",
            "https://*.baidu.com/*"
        ],
        "js": [
            "lib/jquery.js",
            "js/contentscript.js"
        ]
    }],
    "page_action": {
        "default_icon": "images/conan-hand.png",
        "default_title": "SDK TOOL",
        "default_popup": "tool.html"
    },
    "web_accessible_resources": [
        "js/runtime.js",
        "js/message.json",
        "css/sticky.css"
    ],
    "update_url": "https://github.com/chestnutchen/legoSdkTool/raw/master/updates.xml",
    "manifest_version": 2
}
